generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id          String   @id @default(cuid())
  title       String
  author      String
  coverUrl    String
  year        Int?
  pages       Int?
  rating      Int?
  synopsis    String? @db.Text
  isbn        String?
  notes       String? @db.Text
  publisher   String?
  language    String?
  series      String?
  currentPage Int      @default(0)
  status      String   @default("QUERO_LER")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  genre       Genre?   @relation(fields: [genreName], references: [name], onDelete: SetNull)
  genreName   String?
}

model Genre {
  name  String  @id @unique
  books Book[]
}